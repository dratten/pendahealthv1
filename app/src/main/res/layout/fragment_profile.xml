<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="70dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".profileFragment">

    <LinearLayout
        android:id="@+id/topProfilePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_profile_sel"
            app:civ_border_width="0dp" />
        <Button
            android:id="@+id/btnChangeProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_black"
            android:text="Change profile picture"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtGeneralInfo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="General Information" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_gray"
            android:padding="10dp"
            android:rowCount="5"
            android:columnCount="2"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/txtEmail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:text="Email" />
            <TextView
                android:id="@+id/txtPhone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Phone" />
            <TextView
                android:id="@+id/txtFirstname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Firstname" />

            <TextView
                android:id="@+id/txtLastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_below="@id/txtFirstname"
                android:layout_marginTop="10dp"
                android:text="Lastname"
                android:layout_marginRight="5dp"
                android:textColor="@color/main_white"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtVEmail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="example@gmail.com" />
            <TextView
                android:id="@+id/txtVPhone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="0786408335" />
            <TextView
                android:id="@+id/txtVFirstname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="Julius" />

            <TextView
                android:id="@+id/txtVLastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="10dp"
                android:text="Nyere"
                android:layout_marginRight="5dp"
                android:textColor="@color/main_white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="@color/main_black"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </GridLayout>
        <TextView
            android:id="@+id/txtPersonalInfo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Personal Information" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_gray"
            android:padding="10dp"
            android:rowCount="5"
            android:columnCount="2"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/txtId"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:text="ID" />
            <TextView
                android:id="@+id/txtNHIF"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="NHIF" />
            <TextView
                android:id="@+id/txtLocation"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Location" />
            <TextView
                android:id="@+id/txtVID"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="example@gmail.com" />
            <TextView
                android:id="@+id/txtVNHIF"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="39203923088" />
            <TextView
                android:id="@+id/txtVLocation"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="Nairobi" />



            <Button
                android:id="@+id/btnEditPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="@color/main_black"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </GridLayout>
        <TextView
            android:id="@+id/txtMedicalDetails"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Medical Information" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_gray"
            android:padding="10dp"
            android:rowCount="5"
            android:columnCount="2"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/txtBloodType"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:text="Blood Type" />
            <TextView
                android:id="@+id/txtAllergies"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Allergies" />
            <TextView
                android:id="@+id/txtWeight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:text="Weight" />

            <TextView
                android:id="@+id/txtHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:text="Height"
                android:layout_marginRight="5dp"
                android:textColor="@color/main_white"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtVBloodType"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="A+" />
            <TextView
                android:id="@+id/txtVAllergies"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="Sun,Egg,Milk" />
            <TextView
                android:id="@+id/txtVWeight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/main_white"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:text="40kg" />

            <TextView
                android:id="@+id/txtVHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="10dp"
                android:text="5.6"
                android:layout_marginRight="5dp"
                android:textColor="@color/main_white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditMedicalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="@color/main_black"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />
        </GridLayout>
        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Logout"
            android:textSize="14sp"
            android:textColor="@color/main_pink"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>