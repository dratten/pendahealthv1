<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_notification_red"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coronavirus_update"
        android:layout_toEndOf="@+id/notification_image"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        />
        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_example"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/notification_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coronavirus_update"
            android:layout_toEndOf="@+id/notification_image"
            android:layout_below="@id/notification_title"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/text_black"
            />
        <TextView
            android:id="@+id/notification_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coronavirus_update"
            android:layout_toEndOf="@+id/notification_image"
            android:layout_below="@id/notification_description"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/main_blue"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>